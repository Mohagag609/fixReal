{
  "name": "estate-management-system",
  "version": "2.0.0",
  "description": "نظام إدارة العقارات المتطور مع دعم متعدد قواعد البيانات",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "dev": "next dev",
    "build": "npm run lint && npm run type-check && cross-env NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS=--max-old-space-size=4096 next build",
    "start": "next start",
    "lint": "next lint",
    "fresh": "rm -rf .next data var && mkdir data var && npm run dev",
    "optimize": "node scripts/optimize.js",
    "quick-optimize": "node scripts/quick-optimize.js",
    "analyze-bundle": "ANALYZE=true npm run build",
    "performance-test": "npm run build && npm run start",
    "monitor-performance": "node scripts/monitor-performance.js",
    "db-optimize": "psql -d postgres -f src/lib/db/optimizations.sql",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "fix-any-types": "node fix-any-types.js",
    "fix-eslint-issues": "node fix-eslint-issues.js",
    "fix-all-issues": "node fix-all-issues.js",
    "fix-remaining-errors": "node fix-remaining-errors.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-build": "next build && next export && electron-builder",
    "electron-dist": "npm run build && next export && electron-builder --publish=never",
    "electron-pack": "electron-builder --dir",
    "electron-make": "electron-builder --win --publish=never"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@react-pdf/renderer": "^3.4.4",
    "@tanstack/react-table": "^8.21.3",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^2.4.3",
    "critters": "^0.0.25",
    "dayjs": "^1.11.18",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.0",
    "next": "^14.0.0",
    "numeral": "^2.0.6",
    "papaparse": "^5.4.1",
    "postcss": "^8.5.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "tar": "^7.4.3",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/numeral": "^2.0.5",
    "@types/papaparse": "^5.3.16",
    "@types/xlsx": "^0.0.36",
    "cross-env": "^10.0.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.3",
    "prisma": "^6.15.0"
  },
  "build": {
    "appId": "com.estate.management",
    "productName": "Estate Management System",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "electron-main.js",
      "preload.js",
      "server.js",
      "package.json",
      "prisma/**/*",
      "data/**/*",
      "var/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      },
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Estate Management System",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "EstateManagementSystem-Portable.exe"
    },
    "publish": null
  }
}
