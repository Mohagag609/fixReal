# إعدادات البيئة لـ Docker
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/estate_db?schema=public
DATABASE_URL_POSTGRES_LOCAL=postgresql://postgres:postgres@postgres:5432/estate_db?schema=public

# إعدادات JWT
